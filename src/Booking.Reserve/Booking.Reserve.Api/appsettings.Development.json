{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=booking.db;Database=booking;User id=sa;Password=password123;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Secret": "BOOKING-DEV-JWT-KEY-VERY-STRONG-AND-SECURE-KEY",
    "ExpiresInHours": 1,
    "Issuer": "BooKing",
    "Audience": "JwtBooKing",
    "BasePath": ""
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://booking.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ExternalServices": {
    "ApartmentServiceUrl": "http://booking.apartments.api:80/api"
  }  
}
